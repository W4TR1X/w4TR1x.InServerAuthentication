@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using w4TR1x.InServerAuthentication.Interfaces

<ul class="navbar-nav">
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Manage/Index"
           title="Manage">
                @User.Identity.Name @User.Claims.First(x => x.Type == ClaimTypes.Surname).Value |
                <div class="h6 small d-inline">
                    @User.Claims.First(x => x.Type == ClaimTypes.Role).Value
                </div>
            </a>
        </li>
        <li class="nav-item d-flex flex-fill">
            <form class="form-inline w-100" asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link btn-danger border text-light w-100">Logout</button>
            </form>
        </li>
    }
    else
    {
        @*
    <li class="nav-item">
    <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
    </li>
    *@
        <li class="nav-item">
            <a class="nav-link btn btn-link btn-success border text-light" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
